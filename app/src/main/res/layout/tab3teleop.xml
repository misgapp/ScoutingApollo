<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="66dp"
        android:text="Slide to Continue -->"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp"
        android:text="Cubes number:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="36dp"
        android:text="Lines number:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Columns number:"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/CornerTV"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/BeaconTV"
        android:layout_marginTop="39dp"
        android:text="Fall cryptoBox:"
        android:textSize="20dp" />

    <Button
        android:id="@+id/MinusVortex"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="-"
        android:textColor="@color/colorAccent"
        android:layout_alignTop="@+id/PlusVortex"
        android:layout_alignEnd="@+id/MinusCorner"
        android:layout_alignBottom="@+id/PlusVortex"
        android:layout_alignStart="@+id/MinusCorner" />

    <Button
        android:id="@+id/MinusCorner"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="-"
        android:textColor="@color/colorAccent"
        android:layout_alignBaseline="@+id/PlusCorner"
        android:layout_alignBottom="@+id/PlusCorner"
        android:layout_alignStart="@+id/MinusBeacon" />

    <Button
        android:id="@+id/PlusCorner"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="+"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignStart="@+id/PlusBeacon" />

    <Button
        android:id="@+id/PlusVortex"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="+"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/PlusCorner" />

    <TextView
        android:id="@+id/CornerTV"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp" />

    <TextView
        android:id="@+id/VortexTV"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/CornerTV" />

    <Button
        android:id="@+id/PlusBeacon"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="+"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignStart="@+id/textView10" />

    <Button
        android:id="@+id/MinusBeacon"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="-"
        android:textColor="@color/colorAccent"
        android:layout_marginEnd="20dp"
        android:layout_alignBaseline="@+id/PlusBeacon"
        android:layout_alignBottom="@+id/PlusBeacon"
        android:layout_toStartOf="@+id/BeaconTV" />

    <TextView
        android:id="@+id/BeaconTV"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/MinusBeacon"
        android:layout_alignBottom="@+id/MinusBeacon"
        android:layout_alignStart="@+id/CornerTV"
        android:text="0"
        android:textSize="20dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignEnd="@+id/PlusBeacon" />

</RelativeLayout>
