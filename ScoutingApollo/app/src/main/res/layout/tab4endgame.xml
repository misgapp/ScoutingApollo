<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <Switch
        android:id="@+id/WinningStateSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="No"
        android:textOn="Yes"
        android:layout_alignBottom="@+id/WinningState"
        android:layout_toEndOf="@+id/CapLow" />



    <TextView
        android:id="@+id/Beacons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="beacons caught:"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/WinningState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/CapCapped"
        android:layout_marginTop="41dp"
        android:text="Win?"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="CapBall:"
        android:textSize="20dp"
        android:layout_below="@+id/beacon4"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/beacon3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_alignBaseline="@+id/beacon4"
        android:layout_alignBottom="@+id/beacon4"
        android:layout_toEndOf="@+id/beacon4" />

    <CheckBox
        android:id="@+id/beacon0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="0"
        android:layout_alignTop="@+id/Beacons"
        android:layout_toEndOf="@+id/beacon1" />

    <CheckBox
        android:id="@+id/beacon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_alignBaseline="@+id/Beacons"
        android:layout_alignBottom="@+id/Beacons"
        android:layout_toStartOf="@+id/CapHigh" />

    <CheckBox
        android:id="@+id/beacon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_alignBaseline="@+id/beacon1"
        android:layout_alignBottom="@+id/beacon1"
        android:layout_toStartOf="@+id/beacon1" />

    <CheckBox
        android:id="@+id/beacon4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_below="@+id/beacon1"
        android:layout_alignEnd="@+id/CapLow" />

    <CheckBox
        android:id="@+id/CapCapped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capped"
        android:layout_below="@+id/CapNone"
        android:layout_toStartOf="@+id/CapHigh" />

    <CheckBox
        android:id="@+id/CapNone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/CapLow"
        android:layout_alignBottom="@+id/CapLow"
        android:layout_alignParentEnd="true"
        android:checked="true"
        android:text="None" />

    <CheckBox
        android:id="@+id/CapHigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/CapCapped"
        android:layout_alignBottom="@+id/CapCapped"
        android:layout_alignParentEnd="true"
        android:text="High" />

    <CheckBox
        android:id="@+id/CapLow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="low"
        android:layout_alignTop="@+id/textView11"
        android:layout_alignStart="@+id/CapCapped" />

</RelativeLayout>
